{
    "swagger": "2.0",
    "info": {
        "description": "Shorten your URLs",
        "title": "microURL API",
        "contact": {},
        "license": {
            "name": "Apache 2.0",
            "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
        },
        "version": "1.0"
    },
    "paths": {
        "/": {
            "post": {
                "description": "Generate a unique short URL for a user provided long URL",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "URLs"
                ],
                "summary": "Create a short URL",
                "parameters": [
                    {
                        "description": "Long URL",
                        "name": "url",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/dto.CreateShortURLRequest"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Created",
                        "schema": {
                            "$ref": "#/definitions/dto.CreateShortURLResponse"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "$ref": "#/definitions/dto.CreateShortURLResponse"
                        }
                    }
                }
            }
        },
        "/{url}": {
            "get": {
                "description": "When a user sends a request with a short URL, they should be redirected to the corresponding long URL",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "text/html"
                ],
                "tags": [
                    "URLs"
                ],
                "summary": "Redirect to long URL",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Short URL",
                        "name": "url",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "301": {
                        "description": "Moved Permanently",
                        "schema": {
                            "type": "html"
                        },
                        "headers": {
                            "Location": {
                                "type": "string",
                                "description": "Long URL for the provided short URL"
                            }
                        }
                    },
                    "404": {
                        "description": "Not Found",
                        "schema": {
                            "$ref": "#/definitions/dto.GetLongURLResponse"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "$ref": "#/definitions/dto.GetLongURLResponse"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "dto.CreateShortURLRequest": {
            "type": "object",
            "properties": {
                "long_url": {
                    "type": "string"
                }
            }
        },
        "dto.CreateShortURLResponse": {
            "type": "object",
            "properties": {
                "error_message": {
                    "type": "string"
                },
                "short_url": {
                    "type": "string"
                }
            }
        },
        "dto.GetLongURLResponse": {
            "type": "object",
            "properties": {
                "error_message": {
                    "type": "string"
                },
                "long_url": {
                    "type": "string"
                }
            }
        }
    }
}